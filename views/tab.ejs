            flex: 1;
            padding: 40px;
            overflow-y: auto;
            background-color: #fff;
        }

        .mom-header {
            margin-bottom: 30px;
            border-bottom: 2px solid #6264a7;
            padding-bottom: 16px;
        }

        .mom-title {
            font-size: 28px;
            font-weight: 600;
            color: #242424;
            margin-bottom: 8px;
        }

